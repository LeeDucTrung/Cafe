@model List<VPDT.Models.NGUYENLIEU>

<table style="width:100%;height:100%;" id="tblDisplay" class=" table table-bordered table-hover table-striped">
    <thead>
        <tr style="text-align:center">
            <th style="width:10%">STT</th>
            <th style="width:60%">Tên nguyên liệu</th>
            <th style="width:10%">Số lượng</th>
            <th style="width:10%">Đơn vị</th>
            <th style="width:10%">Tác vụ</th>
        </tr>
    </thead>
    <tbody>
        @{
            for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                <tr>
                    <td style="text-align:center">@(i+1)</td>
                    <td style="text-align:left">@item.TENNGUYENLIEU</td>
                    <td style="text-align:center">@item.SOLUONG</td>
                    <td style="text-align:left">@item.DONVITINH</td>
                    <td style="text-align:center">
                        <a href="javascript:;" onclick="openUpdate(@item.ID)" data-toggle="tooltip" title="Cập nhập dữ liệu"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<script src="~/js/NguyenLieu/getlist.js"></script>