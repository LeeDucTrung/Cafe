@{
    ViewData["Title"] = "Danh sách nguyên liệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12" id="frmFilter">
        <div class="card">
            <div class="card-header border-0" style="height:60px">
                <div class="row align-items-center my-auto" id="frmFilter">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <input id="txtName" type="text" class="form-control" placeholder="Tìm kiếm theo tên nguyên liệu">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group" style="float:left">
                            <button id="btnSearch" class="btn btn-primary btn-sm">
                                <i class="fas fa-search mr-2" aria-hidden="true"></i>Tìm kiếm
                            </button>
                            <button id="btnCreate" class=" btn btn-success btn-sm">
                                <i class="fas fa-plus mr-2" aria-hidden="true"></i>Thêm mới
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div id="dtTable">
            </div>
        </div>
    </div>
</div>
<script src="~/js/NguyenLieu/index.js"></script>